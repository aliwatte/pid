			//Pour le menu escamotable
			htmlbodyHeightUpdate()
			$(window).resize(function() {htmlbodyHeightUpdate()});
			$(window).scroll(function() {height2 = $('.main').height()htmlbodyHeightUpdate()});*/
		
		});
	</script>
{% endblock %}
