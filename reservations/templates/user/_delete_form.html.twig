

<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" 
				onsubmit="return confirm('Vous etes sur le point de supprimer {{ user.username|capitalize }} \nVoules vous continuer ?');">
				
    <input type="hidden" name="_method" value="DELETE">
	
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button type="" class="btn btn-secondary">Supprimer</button>
</form>
