<header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
	<h1 class="my-0 mr-md-auto font-weight-normal">Projet Réservations</h1>
	<form id="frmSearch" class="form-inline mt-2 mt-md-0">
		<input class="form-control mr-sm-2" type="text" placeholder="Rechercher" aria-label="Search">
		<button class="btn btn-outline-success my-2 my-sm-0" type="submit">🔍</button>
	</form>
		{%  if app.user %}
				<span class="usr"> {{ app.user.username|capitalize }} </span>
				<a class="btn btn-outline-primary" href="{{ path('app_logout') }}">Se deconnecter</a>
		{%  elseif  action  == 'login' %}
			<span style="font-weight:bold;">Connection&nbsp;</span>
			<a id="signin" class="btn btn-outline-primary" href="/signin">S'inscrire</a>
		{%  elseif  action  == 'inscription' %}
			<a id="login" class="btn btn-outline-primary" href="/login">Se connecter</a>
			<span style="font-weight:bold;">Inscription</span>
		{%  else %}
			<a id="login" class="btn btn-outline-primary" href="/login">Se connecter</a>
			<a id="signin" class="btn btn-outline-primary" href="/signin">S'inscrire</a>
		{% endif %}
</header>
